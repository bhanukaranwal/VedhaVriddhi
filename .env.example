# Database Configuration
POSTGRES_PASSWORD=your-secure-postgres-password
CLICKHOUSE_PASSWORD=your-secure-clickhouse-password
REDIS_PASSWORD=your-secure-redis-password

# API Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
API_RATE_LIMIT=1000
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Trading Engine Configuration
MAX_ORDER_SIZE=100000000
MAX_POSITION_SIZE=500000000
RISK_CHECK_ENABLED=true
LATENCY_MONITORING=true

# Market Data Configuration
NSE_API_KEY=your-nse-api-key
BSE_API_KEY=your-bse-api-key
BLOOMBERG_API_KEY=your-bloomberg-api-key
REUTERS_API_KEY=your-reuters-api-key

# Security Configuration
ENCRYPTION_KEY=your-32-character-encryption-key
HSM_ENDPOINT=https://your-hsm-endpoint
SSL_CERT_PATH=/path/to/ssl/cert
SSL_KEY_PATH=/path/to/ssl/key

# Monitoring Configuration
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=your-grafana-password
LOG_LEVEL=INFO
METRICS_PORT=9090

# External Services
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
